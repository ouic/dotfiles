alias jn="echo 'Démarrage de Jupyter Notebook' && jupyter notebook"
alias ouic="data && pull && web && pull && echo 'Démarrage de VisualStudioCode & Jupyter Notebook' && cd ~/code && code . && jupyter notebook"
alias wagon="echo 'Positionnement dans le dossier -ouic-' && cd ~/code/ouic"
alias data="echo 'Positionnement dans le dossier -data-challenges-' && cd ~/code/ouic/data-challenges"
alias web="echo 'Positionnement dans le dossier -fullstack-challenges-' && cd ~/code/ouic/fullstack-challenges"
alias commit="echo 'Mise à jour des fichiers sur GitHub' && git status; git add .; git commit -m "update"; git push origin master"
alias test="clear; rake"
alias bye="kill $(pgrep bash)"
alias bye2="kill -9 $(pgrep bash)"